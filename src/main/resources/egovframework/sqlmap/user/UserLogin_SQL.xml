	<insert id="userLogin.Login"  parameterClass="egovMap">
		<![CDATA[
			INSERT INTO LOGIN
				( ID
				  ,USER_ID
				  , IP
				  , LOGIN_DATE
				  , LOGOUT_DATE)
			VALUES ( #id#
				  , #userId#
				  , #ip#
				  , sysdate
				  , null )
		]]>
	</insert>
	
	<update id="userLogin.Logout" parameterClass="egovMap">
		<![CDATA[
			UPDATE LOGIN
			SET 
				LOGOUT_DATE=sysdate
			WHERE ID=#id#
		]]>
	</update>
	
	<delete id="userLogin.deleteOne" parameterClass="egovMap">
		<![CDATA[
			DELETE FROM LOGIN
			WHERE ID=#id#
		]]>
	</delete>

	<delete id="userLogin.deleteAll" parameterClass="egovMap">
			DELETE FROM LOGIN
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				USER_ID =#userId#
			</isEqual>
	</delete>
    
    <select id="userLogin.selectOne" parameterClass="egovMap" resultClass="egovMap">
        <![CDATA[
            SELECT * FROM LOGIN
            WHERE ID = #id#
        ]]>
    </select>
	
	<select id="userLogin.selectList" parameterClass="egovMap" resultClass="egovMap">
			SELECT * FROM LOGIN
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				USER_ID =#userId#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				USER_ID LIKE '%' || #userId# || '%'
			</isEqual>
			ORDER BY LOGOUT_DATE DESC, LOGIN_DATE_DESC
			LIMIT #recordCountPerPage# OFFSET #firstIndex#		
	</select>
	
	<select id="userLogin.selectListTotCnt" parameterClass="egovMap" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM SAMPLE
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				USER_ID = #userId#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				USER_ID LIKE '%' || #userId# || '%'
			</isEqual>
	</select>

</sqlMap>
